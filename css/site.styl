// NAV

.nav
  position: fixed
  box-sizing: border-box
  padding: $margin-basic
  z-index: 999

#top-left
  top: 0
  left: 0

#top-right
  top: 0
  right: 0

#bottom-left
  bottom: 0
  left: 0

#bottom-right
  bottom: 0
  right: 0

// SLIDESHOWS
// - single
.single .gallery
  height: 80vh

.single .gallery nav
  position: absolute
  bottom: 0
  right: 0

.swiper-slide
  text-align: center
  width: auto
  max-width: 100%
  display: flex
  justify-content: space-between
  align-items: center

  img
    max-width: 100%
    max-height: 100%

// SINGLE
.single article
  display: flex
  justify-content: space-around
  align-items: center
  flex-direction: column
  height: 100vh

  & .gallery-nav
    postition: absolute
    right: 0
    bottom: 0

  & .nav.close
    position: absolute
    top: 0
    left: 0


// MEDIA QUERIES

@media screen and (max-width: ($col * $cols)+($gutter * $cols))
  html
    width: 100%
