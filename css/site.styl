@import "sanitize"
@import "helpers"

// GRID OF 12 90px COLUMNS WITH 16px GUTTER
$cols = 12
$col = 90px
$gutter = 16px
.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  box-sizing: content-box
for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

// FLUID COLS
.percent-col
  float: left
  box-sizing: content-box
$pcols = 10
for pcol in 1..$pcols
  .into-{pcol}
    width: ( 100% / pcol )

// VARIABLES

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-basic = ($gutter * 2)
$margin-large = ($gutter * 5)
$margin-larger = ($gutter * 7)

$font-size-basic = 28px
$font-leading-basic = 1.35em
$font-tracking-basic = 0.001em

$color-black-soft = rgb(14, 14, 14)
$color-white-soft = rgb(253, 253, 253)

$color-red = red
$color-gray = gray

// TYPOGRAPHY

body
  font-family: helvetica, arial, sans-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: 3em

h2
  font-size: 2em

h3
  font-size: 1.5em

p
  margin-bottom: 1em


// LINKS

a, a:active, a:visited
  color:inherit
  transition:opacity .2s
  &:hover
    opacity:.5


// BASIC

html
  background-color: $color-white-soft
  color: $color-black-soft

img
  max-width: 100%
  height: auto

.background-red
  background-color: $color-red

.background-gray
  background-color: $color-gray


// NAV

.nav
  position: fixed
  box-sizing: border-box
  padding: $margin-basic
  z-index: 999

#top-left
  top: 0
  left: 0

#top-right
  top: 0
  right: 0

#bottom-left
  bottom: 0
  left: 0

#bottom-right
  bottom: 0
  right: 0

// CONTENT LAYOUTS

#page
  color: $color-white-soft

#page-copy
  box-sizing: border-box
  padding: $margin-larger



// MEDIA QUERIES

@media screen and (max-width: ($col * $cols)+($gutter * $cols))
  html
    width: 100%
