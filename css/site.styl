@import "sanitize"
@import "helpers"
@import "lib/swiper"

// GRID OF 12 90px COLUMNS WITH 16px GUTTER
$cols = 12
$col = 90px
$gutter = 16px
.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  box-sizing: content-box
for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

// FLUID COLS
.percent-col
  float: left
  box-sizing: content-box
$pcols = 10
for pcol in 1..$pcols
  .into-{pcol}
    width: ( 100% / pcol )


// VARIABLES

$animation-speed-basic = 0.3s

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-basic = ($gutter * 2)
$margin-large = ($gutter * 5)
$margin-larger = ($gutter * 7)

$font-size-basic = 28px
$font-size-small = ($font-size-basic * 0.61803398875)

$font-leading-basic = 1.35em

$font-tracking-basic = 0.01em
$font-tracking-wider = 0.025em

$color-black-soft = rgb(14, 14, 14)
$color-white-soft = rgb(253, 253, 253)

$color-red = red
$color-gray = gray

// TYPOGRAPHY

body
  font-family: helvetica, arial, sans-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: 3em
  line-height: $font-leading-basic

h2
  font-size: 2em
  line-height: $font-leading-basic

h3
  font-size: 1.5em
  line-height: $font-leading-basic

p
  margin: 0 auto 1em auto
  max-width: 1000px

.font-color-white
  color: $color-white-soft

.font-color-black
  color: $color-black-soft

.font-color-red
  color: $color-red

.font-color-gray
  color: $color-gray

.font-tracking-wider
  letter-spacing: $font-tracking-wider


// LINKS

a, a:active, a:visited
  color: inherit
  text-decoration: underline
  font-weight: bold
  &:hover
    text-decoration: none


// BASIC

html
  background-color: $color-white-soft
  color: $color-black-soft

/*
img
  max-width: 100%
  height: auto
*/

.background-red
  background-color: $color-red

.background-gray
  background-color: $color-gray


// NAV

.nav
  position: fixed
  box-sizing: border-box
  padding: $margin-basic
  z-index: 999

#top-left
  top: 0
  left: 0

#top-right
  top: 0
  right: 0

#bottom-left
  bottom: 0
  left: 0

#bottom-right
  bottom: 0
  right: 0

.conditional-nav
  display: none

.home .conditional-nav.nav-home
  display: block

.single .conditional-nav.nav-single
  display: block

.page .conditional-nav.nav-page
  display: block

// SLIDESHOWS

.single .gallery
  height: 80vh

.single .gallery nav
  position: absolute
  bottom: 0
  right: 0

.swiper-slide
  text-align: center
  width: auto
  max-width: 100%
  display: flex
  justify-content: space-between
  align-items: center
  img
    max-width: 100%
    max-height: 100%


// SINGLE

#single article
  display: flex
  justify-content: space-around
  align-items: center
  flex-direction: column
  height: 100vh

#single-title
  position: fixed
  z-index: 888
  top: 0
  width: 100%
  box-sizing: border-box
  padding: $margin-basic

// CONTENT LAYOUTS

#page
  color: $color-white-soft

#page-copy
  box-sizing: border-box
  padding: $margin-larger

#page-footer
  font-size: $font-size-small
  margin: $margin-basic 0


// FORM

#form-inquiries
  background-color: $color-white-soft
  padding: $margin-small
  max-width: 850px
  margin: $margin-large auto

input, textarea
  box-sizing: border-box
  padding: $margin-small
  margin: $margin-tiny 0

input
  width: 49%

textarea
  display: block
  width: 100%

button
  padding: $margin-tiny $margin-basic
  margin-top: $margin-small
  background-color: $color-gray
  color: $color-white-soft
  border-radius: $margin-tiny


// MEDIA QUERIES

@media screen and (max-width: ($col * $cols)+($gutter * $cols))
  html
    width: 100%
