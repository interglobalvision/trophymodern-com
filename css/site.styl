@import "sanitize"
@import "helpers"
@import "fonts"
@import "lib/swiper"

// GRID OF 12 90px COLUMNS WITH 16px GUTTER
$cols = 12
$col = 90px
$gutter = 16px
.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  box-sizing: content-box
for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

// FLUID COLS
.percent-col
  float: left
  box-sizing: border-box
$pcols = 2
for pcol in 1..$pcols
  .into-{pcol}
    width: ( 100% / pcol )


// VARIABLES

$animation-speed-basic = 0.3s
$animation-speed-long = ($animation-speed-basic * 5)

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-basic = ($gutter * 2)
$margin-large = ($gutter * 5)
$margin-larger = ($gutter * 7)

$font-size-basic = 28px
$font-size-small = ($font-size-basic * 0.61803398875)

$font-leading-basic = 1.35em

$font-tracking-basic = 0.01em
$font-tracking-wider = 0.025em

$color-black-soft = rgb(14, 14, 14)
$color-white-soft = rgb(253, 253, 253)

$color-red = red
$color-gray = rgb(200,200,200)
$color-light-gray = rgb(230,230,230)

// TYPOGRAPHY

body
  font-family: 'UniversLTStd', helvetica, arial, sans-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: 1em
  line-height: $font-leading-basic
  font-weight: 600

h2
  font-size: 1em
  line-height: $font-leading-basic
  font-weight: 600

h3
  font-size: 1em
  line-height: $font-leading-basic
  font-weight: 600

p
  margin: 0 auto 1em auto
  max-width: 1000px
  font-weight: 400
  strong
    font-weight: 500

em
  font-style: italic

.font-color-white
  color: $color-white-soft

.font-color-black
  color: $color-black-soft

.font-color-red
  color: $color-red

.font-color-gray
  color: $color-gray

.font-tracking-wider
  letter-spacing: $font-tracking-wider


// LINKS

a, a:active, a:visited
  color: inherit
  text-decoration: none

p
  a, a:active, a:visited
    color: inherit
    text-decoration: underline
    font-weight: 500
    &:hover
      text-decoration: none


// BASIC

html
  background-color: $color-black-soft
  color: $color-black-soft

.background-red
  background-color: $color-red

.background-gray
  background-color: $color-gray


// Three.js
@import "three"

// LOADING

#loading
  display: none
  position: fixed
  background: $color-red
  width: 100%
  height: 100%
  top: 0
  left: 0
  z-index: 1000
  opacity: 1
  transition: opacity 1s
  &.loaded
    opacity: 0
    pointer-events: none
    #loading-overlay
      display: none

#loading-logo
  height: $margin-larger * 2
  width: $margin-larger * 2
  top: 50%
  left: 50%
  margin-top: -($margin-larger)
  margin-left: -($margin-larger)
  position: absolute
  svg.logo
    fill: $color-white-soft
    width: 100%
    height: 100%
    left: 0
    top: 0
    position: absolute
    z-index: 1001
  #loading-overlay
    background: $color-red
    width: 97%
    height: 100%
    right: 0
    top: 0
    position: absolute
    z-index: 1002



// NAV

.nav
  position: fixed
  box-sizing: border-box
  padding: $margin-basic
  z-index: 999
  opacity: 1
  transition: opacity $animation-speed-basic

  &.loading
    opacity: 0

  svg
    width: 30px
    height: 30px
    fill: $color-black-soft
    &.logo
      width: auto
      height: 40px

.home
  .nav
    svg
      fill: $color-red

#top-left
  top: 0
  left: 0

#top-right
  top: 0
  right: 0
  opacity: 1 !important
  display: block !important

#bottom-left
  bottom: 0
  left: 0

#bottom-right
  bottom: 0
  right: 0

.conditional-nav
  display: none

.home .conditional-nav.nav-home
  display: block

.single .conditional-nav.nav-single
  display: block

.page .conditional-nav.nav-page, .post-type-archive-exhibition .conditional-nav.nav-page
  display: block

#nav-mute
  display: none


// SLIDESHOWS

.single .gallery
  height: 100%
  width: 100%

.single .gallery nav
  position: absolute
  bottom: 0
  right: 0

.swiper-slide
  text-align: center
  width: 100%
  height: 100%
  display: flex
  justify-content: space-between
  align-items: center
  opacity: 0
  transition: opacity $animation-speed-basic
  background-color: $color-white-soft
  img
    max-width: 100%
    height: 80vh
    margin: 0 auto
  &.drawing
    background-color: $color-light-gray


// SINGLE

#single
  background-color: $color-white-soft
  height: 100%
  article
    display: flex
    justify-content: space-around
    align-items: center
    flex-direction: column
    height: 100vh

#single-title
  position: fixed
  z-index: 888
  top: 0
  width: 100%
  box-sizing: border-box
  padding: $margin-basic


// EXHIBITIONS

#exhibitions
  background-color: $color-gray
  img
    max-width: 100%
    height: auto

.pcol-padding-right
  padding-right: $margin-basic

.exhibition
  box-sizing: border-box
  padding: $margin-larger

.exhibition-header
  margin-bottom: 1em


// CONTENT LAYOUTS
#main-container
  opacity: 1
  transition: opacity $animation-speed-basic

  &.loading
    opacity: 0

#page
  color: $color-white-soft

#page-copy
  box-sizing: border-box
  padding: $margin-larger
  img
    max-width: 100%
    height: auto

#page-footer
  font-size: $font-size-small
  margin: $margin-basic 0


// FORM

#form-inquiries
  background-color: $color-white-soft
  padding: $margin-small
  max-width: 850px
  margin: $margin-large auto
  transition: background-color $animation-speed-long

#form-inquiries-output
  display: none
  padding: $margin-basic 0

input, textarea
  box-sizing: border-box
  padding: $margin-tiny $margin-small
  margin: $margin-tiny 0
  background: $color-light-gray
  &:focus
    outline: 0

input
  width: 49%

textarea
  display: block
  width: 100%

button
  padding: $margin-tiny $margin-basic 0
  margin-top: $margin-small
  background-color: $color-gray
  color: $color-white-soft
  border-radius: $margin-tiny

textarea, input, button
  &:focus
    outline: 0


// MEDIA QUERIES

@media screen and (max-width: 1122px)

  $font-size-basic = 22px
  $font-size-small = ($font-size-basic * 0.61803398875)
  $font-leading-basic = 1.35em

  body
    font-family: 'UniversLTStd', helvetica, arial, sans-serif
    font-size: $font-size-basic
    line-height: $font-leading-basic

@media screen and (max-width: 800px)

  $font-size-basic = 19px
  $font-size-small = ($font-size-basic * 0.61803398875)
  $font-leading-basic = 1.35em

  body
    font-family: 'UniversLTStd', helvetica, arial, sans-serif
    font-size: $font-size-basic
    line-height: $font-leading-basic

@media screen and (max-width: 600px)

  .percent-col
    float: none
    width: 100%
    padding-right: 0px
    padding-bottom: $margin-small

  // NAV

  .nav
    svg
      width: 35px
      height: 35px

  #logo
    width: 95px
    height: 35px


@media screen and (max-width: 450px)

  // NAV

  .nav
    svg
      width: 30px
      height: 30px

  #logo
    width: 82px
    height: 30px
